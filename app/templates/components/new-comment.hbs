{{#if addNewComment}}
  <h1>New Comment</h1>
  <div>
   <form>
     <div class="form-group">
       <label for="user">User</label>
       {{input value=user id="user"}}
     </div>

     <div class="form-group">
       <label for="body">Body</label>
       {{input value=body id="body"}}
     </div>
     <button {{action 'save1'}}>Save</button>
   </form>
  </div>
 {{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
